    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch LuaJiT",
            "type": "lua-local",
            "request": "launch",
            "program": {
                "lua": "/usr/local/bin/luajit",
                "file": "${workspaceFolder}/src/engine/test.lua"
            }
        },
        {
            "name": "Launch LOVE2D Debug",
            "type": "lua-local",
            "request": "launch",
            "program": {
                "command": "love"
            },
            "args": [
                "src",
                "--fps",
                "--debug"
            ]
        },
        {
            "name": "Launch LOVE2D",
            "type": "lua-local",
            "request": "launch",
            "program": {
                "command": "love"
            },
            "args": [
                "src",
                "--fps"
            ]
        },
    ]
}